<head>
  <meta charset="UTF-8">
  <title>Student Management System</title>
    
  <!---CDN Links-->
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>  
  <style type="text/css" rel="stylesheet">
      input{
        height: 40px !important;
      }
  </style>
  </head>
<body>
  <div class="page-wrapper">
    <div class="row">
      <nav class="navbar navbar-inverse" role="navigation" style="padding-left:130px;">
           <ul class="nav navbar-nav">
              <li class="active"><a href="/">Student Record Management</a></li>
           </ul>
      </nav>
    </div>
    <div class="row jumbotron">
      <div class="col-md-4 col-md-offset-4">
          <form method="post" action="/students/update">
              <div class="form-group">
                <p class="text-center"> <%= message != null ? message : ''%></p>
              </div>
              <div class="form-group">
                <h3 class="text-center text-success">Update Record</h3>
              </div>
              <div class="hidden">
                <input class="form-control" type="invisible" name="id" required value= <%=data[0].id%>>
              </div>
              <div class="form-group">
                <input class="form-control" type="text" name="sname" required value= <%=data[0].sname%>>
              </div>
              <div class="form-group">
                <input class="form-control" type="text" name="fname" required value= <%=data[0].fname%>>
              </div>
              <div class="form-group">
                <input class="form-control" type="tel" name="phoneno" required value= <%=data[0].phoneno%>>
              </div>
              <div class="form-group">
                <input class="form-control" type="email" name="email" required value= <%=data[0].email%>>
              </div> 
              <div class="form-group">
                <input class="form-control" type="text" name="gender" required value= <%=data[0].gender%>>
              </div> 
              <div class="form-group">
                <textarea class="form-control" type="text" name="address" required><%=data[0].address%></textarea>
              </div>
              <div class="form-group">
                <input type="submit" class="btn btn-primary pull-right" name="Submit" value="Update">
              </div>
          </form>        
      </div>
    </div>
  </div>

  
</body>
</html>